<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/safe_green</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="actionMenuTextColor">@color/toolbar_action</item>
        <item name="colorControlNormal">@color/toolbar_action</item>
    </style>

    <style name="WhiteThemeBase" parent="AppTheme" />

    <style name="WhiteTheme" parent="WhiteThemeBase" />

    <style name="PrimaryButton">
        <item name="android:layout_height">@dimen/primary_button_height</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@drawable/primary_button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextButton">
        <item name="android:textColor">@color/text_button_color</item>
        <item name="android:drawableTint">@color/primary</item>
        <item name="android:foreground">@drawable/background_selectable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <!--
        Only use this to set font.
        All other attributes will overwrite default values for EVERY view
        -->
    </style>

    <style name="TextTitle" parent="Text">
        <item name="fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/gnosis_dark_blue</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextTitleSection" parent="Text">
        <item name="fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">@dimen/default_line_spacing</item>
        <item name="android:textColor">@color/gnosis_dark_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDark" parent="Text">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">@dimen/default_line_spacing</item>
        <item name="android:textColor">@color/gnosis_dark_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextDark.Bold" parent="TextDark">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLink" parent="Text">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/safe_green</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextMedium" parent="Text">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextLight" parent="Text">
        <item name="fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">@dimen/default_line_spacing</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextLight.Small" parent="TextLight">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAction" parent="Text">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/safe_green</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:background">@color/background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/medium_grey</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="SafeOverviewToolbar">
        <item name="theme">?attr/actionBarTheme</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
    </style>

    <style name="Toolbar">
        <item name="theme">?attr/actionBarTheme</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="ToolbarTitle">
        <item name="fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">@dimen/default_line_spacing</item>
        <item name="android:textColor">@color/gnosis_dark_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarSubtitle">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/medium_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolbarButton">
        <item name="android:textColor">@color/text_button_color</item>
        <item name="android:drawableTint">@color/primary</item>
        <item name="android:foreground">@drawable/background_selectable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/background</item>
        <item name="tabIndicatorColor">@color/safe_green</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabIconTint">@drawable/tab_item_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="tabSelectedTextColor">@color/safe_green</item>
        <item name="tabTextAppearance">@style/TabText</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@drawable/tab_item_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">start</item>
        <item name="singleLine">true</item>
    </style>

    <style name="Input" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textColorHint">@color/light_text</item>
        <item name="android:background">@drawable/background_input</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet_rounded</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

</resources>
